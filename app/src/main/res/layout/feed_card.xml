<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                android:layout_margin="5dp"
                android:id="@+id/profile_pic">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mark_zucc"
                android:layout_gravity="center"
                android:gravity="top"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/profile_name"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_below="@id/lin1"
            android:id="@+id/street_image"
            android:scaleType="centerCrop"
            android:src="@drawable/a">
        </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sardar_patel_road"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/street_name"
        android:maxLines="8"
        android:layout_below="@id/street_image"
        android:layout_margin="2dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/issue"
        android:layout_margin="2dp"
        android:layout_below="@id/street_name"
        android:text="@string/issue_xxxxxxx"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue"
        android:layout_margin="2dp"
        android:textSize="12sp"
        android:id="@+id/government_update"
        android:textColor="#575B66"
        android:text="@string/government_update_xxxxxxxx"/>

    <TextView
        android:id="@+id/upload_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/government_update"
        android:layout_margin="5dp"
        android:maxLines="8"
        android:text="@string/_4_hours_ago"
        android:textColor="#000"
        android:textSize="10sp"
        android:gravity="start"
        tools:ignore="SmallSp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>